//server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

// bin/www
const fs = require('fs');
const path = require('path');

/**
 * Logt een directory boom, met mogelijkheid om mappen te negeren.
 * @param {string} dir - Startmap (bijv. process.cwd()).
 * @param {string} indent - Indentatie voor visuele boom.
 * @param {Set<string>} excludeDirs - Mapnamen (exact) die genegeerd worden.
 * @param {number} maxDepth - Optioneel: maximale diepte om te loggen (null = onbeperkt).
 * @param {number} depth - Interne teller, niet meegeven.
 */
function logDirectoryTree(dir, indent = '', excludeDirs = new Set(), maxDepth = null, depth = 0) {
  try {
    const items = fs.readdirSync(dir, { withFileTypes: true });

    for (const item of items) {
      // Sla uitgesloten mappen over
      if (item.isDirectory() && excludeDirs.has(item.name)) {
        console.log(`${indent}üìÇ ${item.name} (‚è≠Ô∏è overgeslagen)`);
        continue;
      }

      const fullPath = path.join(dir, item.name);
      const icon = item.isDirectory() ? 'üìÇ' : 'üìÑ';
      console.log(`${indent}${icon} ${item.name}`);

      // Recursief door submappen, met dieptebegrenzing
      if (item.isDirectory()) {
        if (maxDepth === null || depth < maxDepth) {
          logDirectoryTree(fullPath, indent + '  ', excludeDirs, maxDepth, depth + 1);
        }
      }
    }
  } catch (err) {
    console.error(`‚ö†Ô∏è  Fout bij lezen van "${dir}":`, err.message);
  }
}

// === Startpunt: project root ===
console.log('=== Directory Tree (zonder node_modules) ===');
const exclude = new Set(['node_modules']); // voeg hier desgewenst meer mappen toe, bv. 'output', 'pdf'
logDirectoryTree(process.cwd(), '', exclude /* , maxDepth = 4 */);
console.log('===========================================');

// ‚úÖ Bonus: check specifiek je font-bestand (case-sensitive!)
const fontPath = path.resolve(process.cwd(), 'fonts/FRSCRIPT.TTF');
console.log('Font pad:', fontPath);
console.log('Font aanwezig?', fs.existsSync(fontPath));


function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  console.log(server.address());
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
